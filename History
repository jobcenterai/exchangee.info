  <script>
    // ================================================
    //  Navigation & View Switching
    // ================================================
    const $ = id => document.getElementById(id);
    const views = document.querySelectorAll('.view');
    const navLinks = document.querySelectorAll('[data-view]');

    function showView(id) {
      views.forEach(v => v.classList.toggle('active', v.id === id));
      navLinks.forEach(a => a.classList.toggle('active', a.dataset.view === id));
      window.scrollTo({ top: 0, behavior: 'smooth' });
      if (id === 'chatView') { loadRooms(); renderChat(); }
    }

    navLinks.forEach(link => {
      link.addEventListener('click', e => {
        e.preventDefault();
        showView(link.dataset.view);
      });
    });

    // ================================================
    //  Crypto Utilities – PBKDF2 + AES-GCM
    // ================================================
    const enc = new TextEncoder();
    const dec = new TextDecoder();

    async function deriveKey(password, salt = null) {
      if (!salt) salt = crypto.getRandomValues(new Uint8Array(16));
      const keyMaterial = await crypto.subtle.importKey(
        'raw', enc.encode(password), 'PBKDF2', false, ['deriveKey']
      );
      return {
        key: await crypto.subtle.deriveKey(
          { name: 'PBKDF2', salt, iterations: 250000, hash: 'SHA-256' },
          keyMaterial, { name: 'AES-GCM', length: 256 }, false, ['encrypt', 'decrypt']
        ),
        salt
      };
    }

    async function encrypt(text, password = '') {
      const { key, salt } = await deriveKey(password);
      const iv = crypto.getRandomValues(new Uint8Array(12));
      const encrypted = await crypto.subtle.encrypt({ name: 'AES-GCM', iv }, key, enc.encode(text));
      const combined = new Uint8Array(salt.byteLength + iv.byteLength + encrypted.byteLength);
      combined.set(salt, 0);
      combined.set(iv, salt.byteLength);
      combined.set(new Uint8Array(encrypted), salt.byteLength + iv.byteLength);
      return btoa(String.fromCharCode(...combined));
    }

    async function decrypt(base64, password = '') {
      const bytes = Uint8Array.from(atob(base64), c => c.charCodeAt(0));
      if (bytes.length < 28) throw new Error('Invalid data format');
      const salt = bytes.slice(0, 16);
      const iv = bytes.slice(16, 28);
      const data = bytes.slice(28);
      const { key } = await deriveKey(password, salt);
      const decrypted = await crypto.subtle.decrypt({ name: 'AES-GCM', iv }, key, data);
      return dec.decode(decrypted);
    }

    // ================================================
    //  Encrypt Tool – Password optional
    // ================================================
    function toggleEncrypt() {
      $('eBtn').disabled = !$('eIn').value.trim();
    }
    $('eIn').oninput = $('ePw').oninput = toggleEncrypt;

    $('eBtn').onclick = async () => {
      const st = $('eSt');
      st.className = 'status';
      st.textContent = '';
      const pw = $('ePw').value;
      try {
        $('eOut').value = await encrypt($('eIn').value.trim(), pw);
        st.textContent = pw ? 'Encrypted successfully' : 'Encrypted (no password – very weak security!)';
        st.classList.add('ok');
      } catch (e) {
        st.textContent = 'Error: ' + e.message;
        st.classList.add('err');
      }
    };

    $('eClr').onclick = () => {
      $('eIn').value = $('ePw').value = $('eOut').value = '';
      $('eSt').textContent = '';
      toggleEncrypt();
    };

    // ================================================
    //  Decrypt Tool – Password optional
    // ================================================
    function toggleDecrypt() {
      $('dBtn').disabled = !$('dIn').value.trim();
    }
    $('dIn').oninput = $('dPw').oninput = toggleDecrypt;

    $('dBtn').onclick = async () => {
      const st = $('dSt');
      st.className = 'status';
      st.textContent = '';
      const pw = $('dPw').value;
      try {
        $('dOut').value = await decrypt($('dIn').value.trim(), pw);
        st.textContent = pw ? 'Decrypted successfully' : 'Decrypted (no password used)';
        st.classList.add('ok');
      } catch (e) {
        st.textContent = e.message.includes('OperationError')
          ? 'Wrong password or invalid/corrupted data'
          : 'Error: ' + e.message;
        st.classList.add('err');
      }
    };

    $('dClr').onclick = () => {
      $('dIn').value = $('dPw').value = $('dOut').value = '';
      $('dSt').textContent = '';
      toggleDecrypt();
    };

    // ================================================
    //  Group Chat – No file sharing
    // ================================================
    const PREFIX = 'jgchat_';

    function getRooms() { try { return JSON.parse(localStorage.getItem(PREFIX+'rooms') || '[]'); } catch { return []; } }
    function saveRooms(rooms) { localStorage.setItem(PREFIX+'rooms', JSON.stringify(rooms)); }
    function getMeta(room) { try { return JSON.parse(localStorage.getItem(PREFIX+room+'_meta') || '{}'); } catch { return {}; } }
    function saveMeta(room, meta) { localStorage.setItem(PREFIX+room+'_meta', JSON.stringify(meta)); }
    function getMsgs(room) { try { return JSON.parse(localStorage.getItem(PREFIX+room) || '[]'); } catch { return []; } }
    function saveMsgs(room, msgs) { localStorage.setItem(PREFIX+room, JSON.stringify(msgs)); }

    function loadRooms() {
      const rooms = getRooms();
      const sel = $('rSel');
      sel.innerHTML = rooms.length ? '' : '<option value="">No rooms yet – create one</option>';
      rooms.forEach(r => {
        const opt = document.createElement('option');
        opt.value = opt.textContent = r;
        sel.appendChild(opt);
      });
    }

    async function renderChat() {
      const room = $('rSel').value;
      const pw = $('cPw').value;
      const area = $('cMsg');

      if (!room) {
        area.innerHTML = '<div style="padding:70px 0;text-align:center;color:var(--text-dim)">Select or create a room first</div>';
        return;
      }

      const meta = getMeta(room);
      const needsPw = !!meta.pw;

      if (needsPw && !pw) {
        area.innerHTML = '<div style="padding:70px 0;text-align:center;color:var(--red)">This room is password protected – enter password above</div>';
        return;
      }

      area.innerHTML = '<div style="padding:70px 0;text-align:center;color:var(--text-dim)">Loading messages...</div>';

      let html = '';
      for (const msg of getMsgs(room)) {
        const time = new Date(msg.ts).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
        if (msg.plain) {
          html += `<div><small style="color:var(--text-dim)">${time}</small><br>${msg.text}</div>`;
        } else {
          try {
            const text = await decrypt(msg.cipher, pw);
            html += `<div><small style="color:var(--text-dim)">${time}</small><br>${text}</div>`;
          } catch {
            html += `<div><small style="color:var(--text-dim)">${time}</small><br><em style="color:var(--red)">[cannot decrypt – wrong password?]</em></div>`;
          }
        }
      }

      area.innerHTML = html || '<div style="padding:70px 0;text-align:center;color:var(--text-dim)">No messages yet</div>';
      area.scrollTop = area.scrollHeight;
    }

    function updateSendBtn() {
      const room = $('rSel').value;
      const msg = $('cIn').value.trim();
      const pw = $('cPw').value;
      const needsPw = room ? !!getMeta(room).pw : false;
      $('cSend').disabled = !(room && msg && (!needsPw || pw));
    }

    $('rSel').onchange = () => {
      $('cPw').value = '';
      $('cIn').value = '';
      updateSendBtn();
      renderChat();
    };

    $('cPw').oninput = $('cIn').oninput = updateSendBtn;

    $('cSend').onclick = async () => {
      const btn = $('cSend'); btn.disabled = true;
      const st = $('cSt'); st.className = 'status'; st.textContent = 'Sending...';
      try {
        const room = $('rSel').value;
        const pw = $('cPw').value;
        const text = $('cIn').value.trim();
        const meta = getMeta(room);
        const encrypt = !!meta.pw;

        const entry = encrypt
          ? { cipher: await encrypt(text, pw), ts: Date.now() }
          : { plain: true, text, ts: Date.now() };

        const msgs = getMsgs(room);
        msgs.push(entry);
        saveMsgs(room, msgs);

        $('cIn').value = '';
        st.textContent = 'Message sent';
        st.classList.add('ok');
        renderChat();
        localStorage.setItem(PREFIX + 'upd', Date.now());
      } catch (e) {
        st.textContent = 'Error: ' + e.message;
        st.classList.add('err');
      } finally {
        updateSendBtn();
      }
    };

    $('rCreate').onclick = () => {
      const name = $('rNew').value.trim();
      if (!name) return alert('Please enter a room name');
      const rooms = getRooms();
      if (rooms.includes(name)) return alert('Room name already exists');
      const pw = $('rPwNew').value;
      rooms.push(name);
      saveRooms(rooms);
      saveMeta(name, pw ? { pw: 1 } : {});
      loadRooms();
      $('rSel').value = name;
      $('rNew').value = '';
      $('rPwNew').value = '';
      $('cPw').value = pw;
      renderChat();
      $('cSt').textContent = `Room "${name}" created ${pw ? '(password protected)' : '(open)'}`;
      $('cSt').className = 'status ok';
      localStorage.setItem(PREFIX + 'upd', Date.now());
    };

    $('delete-all').onclick = () => {
      if (!confirm('Delete ALL local chat data permanently?')) return;
      Object.keys(localStorage).filter(k => k.startsWith(PREFIX)).forEach(k => localStorage.removeItem(k));
      loadRooms();
      $('cMsg').innerHTML = '<div style="padding:70px 0;text-align:center;color:var(--text-dim)">All chat data cleared</div>';
      $('cSt').textContent = 'All chats deleted';
      $('cSt').className = 'status ok';
    };

    window.addEventListener('storage', e => {
      if (e.key === PREFIX + 'upd' && $('rSel').value) renderChat();
    });

    // Initialize app
    showView('portfolioView');
    loadRooms();
  </script>
</body>
</html>
